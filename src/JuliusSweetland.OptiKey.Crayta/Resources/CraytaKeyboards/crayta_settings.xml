<Keyboard>
  <Name>Crayta\nUtils</Name>
  <SymbolMargin>10</SymbolMargin>
  <BackgroundColor>Transparent</BackgroundColor>
  <WindowState>Floating</WindowState>
  <Height>15%</Height>
  <Position>Top</Position>
  <BorderThickness>20,20,20,20</BorderThickness>
  <Width>90%</Width>
  <BackgroundColor>Transparent</BackgroundColor>
  <BorderColor>Transparent</BorderColor>
  <Grid>
    <Rows>1</Rows>
    <Cols>10</Cols>
  </Grid>
  <Content>
    <DynamicKey>
      <Text>a</Text>
      <Label>Press\nany key</Label>
      <ShiftDownLabel/>
    </DynamicKey>
    <DynamicKey>
      <Action>MouseLeftClickAtCentre</Action>
      <Label>Click\nanywhere</Label>
    </DynamicKey>
    <DynamicKey>
      <Label>ABC</Label>
      <ChangeKeyboard BackReturnsHere="True">ABC</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey>
      <Label>Mouse</Label>
      <ChangeKeyboard BackReturnsHere="True">Mouse</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey>
      <Label>Play\nWebsite</Label>
      <Plugin>
        <Name>ExternalProgram</Name>
        <Method>RUN</Method>
        <Argument>
          <Name>command</Name>
          <Value>&quot;C:\Program Files (x86)\Google\Chrome\Application\chrome.exe&quot;</Value>
        </Argument>
        <Argument>
          <Name>parameters</Name>
          <Value>&quot;play.crayta.com&quot;</Value>
        </Argument>
      </Plugin>
    </DynamicKey>
    <DynamicKey>
      <Label>Creator\nWebsite</Label>
      <Plugin>
        <Name>ExternalProgram</Name>
        <Method>RUN</Method>
        <Argument>
          <Name>command</Name>
          <Value>&quot;C:\Program Files (x86)\Google\Chrome\Application\chrome.exe&quot;</Value>
        </Argument>
        <Argument>
          <Name>parameters</Name>
          <Value>&quot;create.crayta.com&quot;</Value>
        </Argument>
      </Plugin>
    </DynamicKey>
    <DynamicKey>
      <Label>Change\nPerspective</Label>
         <KeyDown>XboxBack</KeyDown>
         <Wait>200</Wait>
         <KeyUp>XboxBack</KeyUp> 
       </DynamicKey>
    <DynamicKey>
      <Label>Toggle\nFullscreen</Label>
      <Action>F11</Action>
    </DynamicKey>
    <DynamicKey>
      <Label>Joystick\nSettings</Label>
      <ChangeKeyboard BackReturnsHere="True">joystick_settings</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey>
      <Symbol>BackIcon</Symbol>
      <Action>BackFromKeyboard</Action>
    </DynamicKey>
  </Content>
</Keyboard>