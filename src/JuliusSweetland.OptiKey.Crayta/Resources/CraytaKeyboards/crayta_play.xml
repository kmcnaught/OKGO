<Keyboard>
   <Name>Crayta\nPlay</Name>
   <SymbolMargin>10</SymbolMargin>   
   <BackgroundColor>Transparent</BackgroundColor>
   <Height>15%</Height>
   <Position>Top</Position>
   <BorderThickness>20,20,20,20</BorderThickness>
   <!-- <Width>80%</Width> -->
   <BackgroundColor>Transparent</BackgroundColor>
   <BorderColor>Transparent</BorderColor>   
   <Grid>
      <Rows>1</Rows>
      <Cols>6</Cols>
   </Grid>
   <Content>   
      <DynamicKey>
         <Label>X</Label>
         <KeyDown>XboxX</KeyDown>
         <Wait>100</Wait>
         <KeyUp>XboxX</KeyUp>
      </DynamicKey>

      <DynamicKey>
         <Label>Slow\nwalk</Label>
         <KeyUp>XBoxLeftThumbForward</KeyUp>
         <KeyToggle>XBoxLeftThumbHalfForward</KeyToggle>
      </DynamicKey>

      <DynamicKey>
         <Label>Walk</Label>
         <KeyUp>XBoxLeftThumbHalfForward</KeyUp>
         <KeyToggle>XBoxLeftThumbForward</KeyToggle>
      </DynamicKey>

       <DynamicKey>
         <Label>Right\nStick</Label>
         <Action>RightJoystick</Action>
      </DynamicKey>
               
      <DynamicKey>
         <Label>Sprint</Label>
         <KeyDown>XboxLeftThumb</KeyDown>
         <Wait>200</Wait>
         <KeyUp>XboxLeftThumb</KeyUp>
      </DynamicKey>
<!-- 
      <DynamicKey>
         <Label>Edit</Label>
         <KeyUp>XBoxLeftThumbHalfForward</KeyUp>
         <KeyUp>XBoxLeftThumbForward</KeyUp>
         <KeyDown>XboxDown</KeyDown>
         <Wait>1200</Wait>
         <KeyUp>XboxDown</KeyUp>
         <Action>BackFromKeyboard</Action>
      </DynamicKey> -->

      <DynamicKey>
         <Symbol>BackIcon</Symbol>

         <KeyUp>XBoxLeftThumbHalfForward</KeyUp>
         <KeyUp>XBoxLeftThumbForward</KeyUp>         
         <Action>BackFromKeyboard</Action>
      </DynamicKey>
   </Content>
</Keyboard>