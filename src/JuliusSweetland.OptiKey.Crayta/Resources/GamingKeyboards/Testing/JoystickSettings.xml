<Keyboard>
  <Name>Test\nJoysticks</Name>
  <SymbolMargin>10</SymbolMargin>
  <BackgroundColor>Transparent</BackgroundColor>
  <WindowState>Floating</WindowState>
  <Height>90%</Height>
  <Width>90%</Width>
  <Position>Top</Position>
  <VerticalOffset>5%</VerticalOffset>
  <BackgroundColor>Transparent</BackgroundColor>
  <BorderColor>Transparent</BorderColor>
  <Grid>
    <Rows>7</Rows>
    <Cols>8</Cols>
  </Grid>
     <KeyGroup Name="AcceleratingKey" BackgroundColor="black" Opacity=".9" KeyDownOpacity="1" LockOnTime="25" CompletionTimes="100%, 80%, 60%, 40%, 20%, 10%" />   
  <Content>
    <DynamicKey Row="0" Col="0">
      <Label>Left\nStick</Label>
      <Action>LeftJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="1">
      <Label>Right\nStick</Label>
      <Action>RightJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="6">
      <Label>Horizontal\nsensitivity −−</Label>
      <Action>JoystickXSensitivityDown</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="1" Col="7">
      <Label>Vertical\nsensitivity −−</Label>
      <Action>JoystickYSensitivityDown</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="1" Col="0">
      <Label>Mouse\nStick</Label>
      <Action>MouseJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="1">
      <Label>Legacy\nStick</Label>
      <Action>LegacyJoystick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="6">
      <Label>Horizontal\nsensitivity ++</Label>
      <Action>JoystickXSensitivityUp</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="0" Col="7">
      <Label>Vertical\nsensitivity ++</Label>
      <Action>JoystickYSensitivityUp</Action>
      <KeyGroup>AcceleratingKey</KeyGroup>
    </DynamicKey>
    <DynamicKey Row="5" Col="0">
      <Label>Reset\nCentre</Label>
      <Action>ResetJoystick</Action>
    </DynamicKey>    
    <DynamicKey Row="5" Col="1">
      <Label>Copy\nsettings</Label>
      <Action>CopyJoystickSettings</Action>
    </DynamicKey>
    <!-- <DynamicKey Row="6" Col="0" CompletionTimes="200%">
      <Label>Reset all\nsensitivities</Label>
      <Action>ResetAllJoystickSettings</Action>
    </DynamicKey> -->
    <DynamicKey Row="6" Col="7">
      <Symbol>BackIcon</Symbol>
      <Action>ResetAllJoystickSettings</Action>
      <Action>BackFromKeyboard</Action>
    </DynamicKey>
  </Content>
</Keyboard>