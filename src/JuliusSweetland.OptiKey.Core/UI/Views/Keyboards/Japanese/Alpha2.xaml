										Text="エ"
										SharedSizeGroup="KeyWithSingleLetter"
										Value="&#x30A8;"/>
                            <controls:Key Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2" 
										Text="ケ"
										SharedSizeGroup="KeyWithSingleLetter"
										Value="&#x30B1;"/>
