<Keyboard>
   <Name>Minecraft 10x3 inventory</Name>
   <SymbolMargin>35</SymbolMargin>
   <Grid>
      <Rows>2</Rows>
      <Cols>10</Cols>
   </Grid>
   <HideFromKeyboardMenu>True</HideFromKeyboardMenu>
   <InitialKeyStates>
     <KeyUp>MouseMagneticCursor</KeyUp>
     <KeyLockedDown>MouseMagnifier</KeyLockedDown>   
   </InitialKeyStates>
	<Keys>
		
		<DynamicKey Col="9" Height="1" Row="0" Width="1">
			<Label>Esc</Label>
			<Symbol>MinecraftEscButton</Symbol>
			<Action>Escape</Action>
			</DynamicKey>
		<DynamicKey Col="0" Height="1" Row="0" Width="1">
			<Label>Open\nInventory</Label>
			<Text>e</Text>
			</DynamicKey>
		<DynamicKey Col="1" Height="1" Row="0" Width="1">
			<Label>Building</Label>
			<Symbol>MinecraftTabBlocks</Symbol>
			<Action>NumPad0</Action>
			</DynamicKey>
		<DynamicKey Col="2" Height="1" Row="0" Width="1">
			<Label>Decoration</Label>
			<Symbol>MinecraftTabFlower</Symbol>
			<Action>NumPad1</Action>
			</DynamicKey>
		<DynamicKey Col="3" Height="1" Row="0" Width="1">
			<Label>Redstone</Label>
			<Symbol>MinecraftTabGem</Symbol>
			<Action>NumPad2</Action>
			</DynamicKey>
		<DynamicKey Col="4" Height="1" Row="0" Width="1">
			<Label>Transport</Label>
			<Symbol>MinecraftTabLadder</Symbol>
			<Action>NumPad3</Action>
			</DynamicKey>
		<DynamicKey Col="5" Height="1" Row="0" Width="1">
			<Label>Misc</Label>
			<Symbol>MinecraftTabBucket</Symbol>
			<Action>NumPad4</Action>
			</DynamicKey>

		<DynamicKey Col="7" Height="1" Row="0" Width="1">
			<Label>Search</Label>
            <Symbol>MinecraftTabSearch</Symbol>            
			<Action>ArrowDown</Action>
			</DynamicKey>
		<DynamicKey Col="7" Height="1" Row="1" Width="1">
			<Label>ABC</Label>
			<Symbol>AlphaIcon</Symbol>
            <ChangeKeyboard BackReturnsHere="True">3_MC_ChatKeyboard</ChangeKeyboard>
            </DynamicKey>
		<DynamicKey Col="0" Height="1" Row="1" Width="1">
			<Label>Throw\nitem</Label>
			<Text>q</Text>
			</DynamicKey>
		<DynamicKey Col="1" Height="1" Row="1" Width="1">
			<Label>Foodstuffs</Label>
			<Symbol>MinecraftTabApple</Symbol>
			<Action>NumPad5</Action>
			</DynamicKey>
		<DynamicKey Col="2" Height="1" Row="1" Width="1">
			<Label>Tools</Label>
			<Symbol>MinecraftTabAxe</Symbol>
			<Action>NumPad6</Action>
			</DynamicKey>
		<DynamicKey Col="3" Height="1" Row="1" Width="1">
			<Label>Combat</Label>
			<Symbol>MinecraftTabSword</Symbol>
			<Action>NumPad7</Action>
			</DynamicKey>
		<DynamicKey Col="4" Height="1" Row="1" Width="1">
			<Label>Brewing</Label>
			<Symbol>MinecraftTabPotion</Symbol>
			<Action>NumPad8</Action>
			</DynamicKey>
		<DynamicKey Col="5" Height="1" Row="1" Width="1">
			<Label>Materials</Label>
			<Symbol>MinecraftTabStick</Symbol>
			<Action>NumPad9</Action>
			</DynamicKey>
        
		<DynamicKey Col="8" Height="1" Row="0" Width="1">
			<Label>Left\nclick</Label>
			<Symbol>MouseLeftClickWithMouseIcon</Symbol>
			<Action>MouseMoveAndLeftClick</Action>
			</DynamicKey>
        <DynamicKey Col="8" Height="1" Row="1" Width="1">
			<Label>Discard</Label>			
			<Action>Home</Action>
			</DynamicKey>
        
        <DynamicKey Col="6" Height="1" Row="0" Width="1">
			<Label>Scroll\nUp</Label>
			<Symbol>MouseScrollToTopIcon</Symbol>
			<Action>F8</Action>
			</DynamicKey>
		<DynamicKey Col="6" Height="1" Row="1" Width="1">
			<Label>Scroll\nDown</Label>
			<Symbol>MouseScrollToBottomIcon</Symbol>
			<Action>F9</Action>
			</DynamicKey>
		<DynamicKey Col="9" Height="1" Row="1" Width="1">
			<Label>Back</Label>
			<Symbol>BackIcon</Symbol>
			<Action>BackFromKeyboard</Action>
			</DynamicKey>
	</Keys>
</Keyboard>